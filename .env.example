# External APIs
PERSPECTIVE_API_KEY=              
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# MCP / FastMCP server settings
MCP_SERVER_URL=http://localhost:8000

MCP_HTTP_HOST=0.0.0.0
